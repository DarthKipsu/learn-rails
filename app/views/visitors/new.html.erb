<% content_for :title do %>Verna Koskinen<% end %>
<% content_for :description do %>Website for Verna Koskinen<% end %>
<section>
	<img src="http://img.photobucket.com/albums/v260/Verna/20130526_02_zpsfa706c93.jpg">
</section>
<section>
	<div class="column">
		<h2>Stay in touch.</h2>
	</div>
	<div class="column">
		<div class="form-centered">
			<%= simple_form_for @visitor do |f| %>
				<%= f.error_notification %>
				<%= f.input :email, label: false, :placeholder => 'Your email address...' %>
				<br/>
				<%= f.button :submit, "Sign up for the newsleter", :class => "submit" %>
			<% end %>
		</div>
	</div>
</section>